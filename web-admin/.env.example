# API Backend
# En développement local avec émulateurs
VITE_API_BASE_URL=http://localhost:5001/projet-bus-60a3f/europe-west4
# En production (remplacer par votre URL Cloud Functions)
# VITE_API_BASE_URL=https://europe-west4-projet-bus-60a3f.cloudfunctions.net

# Firebase Configuration
# Obtenez ces valeurs depuis Firebase Console → Project Settings → General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Mapbox (pour la carte temps réel)
# Obtenez un token gratuit sur https://www.mapbox.com/
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Optionnel: Utiliser les émulateurs Firebase en développement
VITE_USE_FIREBASE_EMULATORS=true
