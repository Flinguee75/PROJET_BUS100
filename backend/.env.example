# Firebase Configuration
# Firebase project credentials are automatically loaded from service account
# No manual configuration needed for local development with emulators

# Mapbox API Configuration
# Sign up at https://www.mapbox.com to get your access token
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here
MAPBOX_OPTIMIZATION_ENABLED=true

# API Configuration
PORT=5001
NODE_ENV=development

# Firebase Emulator Configuration
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# WebSocket Configuration (for local development)
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8000

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
